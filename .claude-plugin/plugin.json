{
  "name": "batch",
  "version": "0.3.0",
  "description": "Batch operations across files: rename, search-replace, refactor code, update text/markdown, migrate terminology. Use instead of sed/awk/perl/python scripts for multi-file edits.",
  "author": {
    "name": "beorn",
    "url": "https://github.com/beorn"
  },
  "repository": "https://github.com/beorn/claude-tools",
  "license": "MIT",
  "keywords": ["batch", "refactoring", "rename", "search-replace", "ast-grep", "migrate", "bulk-edit", "mass-rename"],
  "mcpServers": {
    "refactor-typescript": {
      "type": "stdio",
      "command": "bunx",
      "args": ["mcp-refactor-typescript"],
      "env": {}
    }
  }
}
